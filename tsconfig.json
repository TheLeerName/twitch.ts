{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"lib": ["ES2020", "DOM"],
		"moduleResolution": "nodenext",
		"typeRoots": [
			"node_modules/@types"
		],
		"rootDir": "./src",
		"outDir": "./dist",
		"declarationDir": "./dist/types",
		"emitDeclarationOnly": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,

		"allowJs": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules"
	]
}